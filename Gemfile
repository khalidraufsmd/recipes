# frozen_string_literal: true

source 'https://rubygems.org'

ruby '2.5.3'
gem 'rails', '~> 5.2.4'
# Use sqlite3 as the database for Active Record
gem 'sqlite3'
# Use Puma as the app server
gem 'puma', '~> 3.11'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# See https://github.com/rails/execjs#readme for more supported runtimes
# gem 'mini_racer', platforms: :ruby

# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.2'
# Turbolinks makes navigating your web application faster. Read more: https://github.com/turbolinks/turbolinks
gem 'turbolinks', '~> 5'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.5'

gem 'bootsnap', '>= 1.1.0', require: false

group :development do
  gem 'listen', '>= 3.0.5', '< 3.2'
  gem 'web-console', '>= 3.3.0'
  gem 'spring'
  gem 'spring-watcher-listen', '~> 2.0.0'
  gem 'pry-rails' # use pry instead of irb as the default REPL
  gem 'pry'
  gem 'pry-nav'
end

group :test do

  gem 'pry-rails' # use pry instead of irb as the default REPL
  gem 'pry'
  gem 'pry-nav'
end

group :test do
  gem 'factory_bot' # a library for setting up Ruby objects as test dat
  gem 'flexmock' # mocking in ruby
  gem 'json_schemer' # Validate responses against a JSON schema
  gem 'minitest', '~> 5.10.3' # test framework
  gem 'minitest-reporters' # adds test reporters (such as JUnit, which jenkins consumes)
  gem 'rails-controller-testing', '~> 1.0'
  gem 'webmock', '~> 3.0.0' # mock outgoing http requests
end


gem 'contentful'
gem 'bootstrap-sass'
gem 'will_paginate', '~> 3.1.1'
gem 'will_paginate-bootstrap'

